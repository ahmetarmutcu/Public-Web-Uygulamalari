@model EntityLayer.Concrete.Admin
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Admin Paneli</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-19/css/style.css">
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">Admin Paneli</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/AdminLTE-3.0.4/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoş Geldiniz</h3>
                        <p class="text-center">Lütfen bilgilerinizi kutucuklara giriniz</p>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                @Html.TextBoxFor(x => x.AdminUsername, new { placeholder = "Kullanıcı adı", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                @Html.PasswordFor(x => x.AdminPassword, new { placeholder = "******", @class = "form-control" })
                            </div>
                            @*<div class="g-recaptcha" data-sitekey="6LcLqFkbAAAAAEnmqyQtYd14mzAAXatrVzB7qBWv"></div>*@
                            <div class="g-recaptcha" data-sitekey="6LcSs38bAAAAAGDqJLTtkHRBUiUC7HVS6AFzEJMZ"></div>
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş</button>
                            </div>
                        }
                        <div class="w-100 text-center mt-4 text">
                            <a href="#">Anasayfaya Dön</a>
                        </div>
                        <br />
                        @TempData["Message"]
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/main.js"></script>
    <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
</body>
</html>

