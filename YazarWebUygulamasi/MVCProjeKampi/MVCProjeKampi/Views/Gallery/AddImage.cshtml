@model EntityLayer.Concrete.ImageFile
@{
    ViewBag.Title = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Resim Ekleme Sayfası</h2>
<br />
@using (Html.BeginForm("AddImage", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.Label("Resim Adı")
        @Html.TextBoxFor(x => x.ImageName, new { @class = "form-control" })
        <br />
        @Html.Label("Fotoğraf")
        <br />
        <input type="file" name="ImagePath" />
        <br /><br />
        <button class="btn btn-info">Resim Ekle</button>
    </div>

}