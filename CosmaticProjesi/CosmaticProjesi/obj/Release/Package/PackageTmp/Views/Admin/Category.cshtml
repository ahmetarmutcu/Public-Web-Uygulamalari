@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        @*<th>Sil</th>*@
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <td>@item.CategoryName</td>
            @*<td><a href="/Admin/DeleteCategory/@item.ID" class="btn btn-danger">Sil</a></td>*@
            <td><a href="/Admin/EditCategory/@item.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Admin/AddCategory/" class="btn btn-info">Yeni Kategori</a>


