@model EntityLayer.Concrete.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Cosmatic Panel Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/Content/_AdminLayout/css/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/Content/_AdminLayout/css/icheck-bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/_AdminLayout/css/adminlte.min.css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/Login/Login"><b>Admin Paneli </b>Girişi</a>
        </div>
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Kullanıcı adı ve şifre giriniz</p>

                @using (Html.BeginForm("UserLogin", "Login", FormMethod.Post))
                {
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Username, new { placeholder = "Kullanıcı Adı", @class = "form-control",AutoComplete="off"})
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.PasswordFor(x => x.Password, new { placeholder = "Şifre",@class = "form-control", AutoComplete = "off"})
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block">Giriş</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Content/_AdminLayout/script/jquery.min.js"></script>
    <script src="~/Content/_AdminLayout/script/bootstrap.bundle.min.js"></script>
    <script src="~/Content/_AdminLayout/script/adminlte.js"></script>
</body>
</html>